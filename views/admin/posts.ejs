<%- include('../layouts/header') %>

<%- include('nav') %>

    <div class="admin_posts">
        <main>
            <h2>Edit Pages</h2>
            <% if (posts.length > 0) { %>
                <table class="posts-table">
                    <thead>
                        <tr>
                            <th>Page</th>
                            <th>Manage</th>
                            <th>Manage</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% posts.forEach(post => { %>
                            <tr>
                                <td><%= post.title %></td>
                                <td><a href="/admin/edit-post/<%= post._id %>">Edit</a></td>
                                <td><a href="/admin/delete-post/<%= post._id %>" onclick="return confirm('Are you sure you want to delete this page?')">Delete</a></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No pages found.</p>
            <% } %>
        </main>
    </div>

<%- include('../layouts/footer') %>