<%- include('../layouts/header') %>

<%- include('nav') %>

<div class="admin_edit_post">
    <main>
        <h2>Edit Page</h2>
        <form action="/admin/edit-post/<%= post._id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="<%= post.title %>">
            </div>
            <div class="form-group">
                <label for="slug">Slug:</label>
                <input type="text" id="slug" name="slug" value="<%= post.slug %>">
            </div>
            <div class="form-group">
                <label for="image">Current Image:</label>
                <img src="<%= post.image %>" alt="Current Image" style="width: 100px; height: auto;">
                <label for="image">New Image (optional):</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <label for="content">Content:</label>
                <textarea id="content" name="content"><%= post.content %></textarea>
            </div>

            <div id="form-error">
                <% if (typeof formErrors != 'undefined') { %>
                    <% for (var er of formErrors) { %>
                        <p><%= er.msg %></p>
                    <% } %>
                <% } %>

                <% if (typeof errorMessage != 'undefined') { %>
                    <p><%= errorMessage %></p>
                <% } %>
            </div>

            <button type="submit">Submit</button>
        </main>
    </div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.9.11/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#content',
        height: 300,
        menubar: false,
        plugins: [
            'advlist autolink lists link image charmap print preview anchor',
            'searchreplace visualblocks code fullscreen',
            'insertdatetime media table contextmenu paste'
        ],
        toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image'
    });
</script>

<%- include('../layouts/footer') %>